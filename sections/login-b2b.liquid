{% comment %}
  B2B Shop Section
  ---------------
  A customizable section for B2B customer login and registration.
{% endcomment %}

<style>
.b2b-shop-section {
  padding: 5rem 5%;
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}
.b2b-shop-heading {
    font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
    letter-spacing: var(--heading-letter-spacing);
    text-transform: var(--heading-text-transform);
    overflow-wrap: anywhere;
  text-align: center;
  margin-bottom: 4rem;
}
.b2b-shop-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
  justify-content: center;
}
.b2b-shop-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  height: 100%;
}
.b2b-shop-option h2 {
  font-size: 1rem;
  margin-bottom: 2rem;
}
.b2b-shop-option p {
  margin-bottom: 10px;
}
.b2b-shop-button {
  align-self: end;
  padding: 0.5rem 1.5rem;
  border: 2px solid #000;
  border-radius: 25px;
  text-decoration: none;
  color: #000;
  font-weight: bold;
  transition: background-color 0.3s, color 0.3s;
}

.button {
    width: 100%;
    max-width: 200px;
}

.h6 {
    font-size: 0.7rem;
    margin-bottom: 10px;
}


</style>

<div class="b2b-shop-section">
  <h1 class="b2b-shop-heading">{{ section.settings.heading }}</h1>
  <div class="b2b-shop-options">
    <div class="b2b-shop-option">
      <div>
        <h2 class="h2">{{ section.settings.existing_customer_heading }}</h2>
        <p class="h6">{{ section.settings.existing_customer_subtext }}</p>
      </div>
      <a href="{{ routes.account_login_url }}" class="button">{{ section.settings.login_button_text }}</a>
    </div>
    <div class="b2b-shop-option">
      <div>
        <h2 class="h2">{{ section.settings.new_customer_heading }}</h2>
        <p class="h6">{{ section.settings.new_customer_subtext }}</p>
      </div>
      <button id="register-button" class="button">{{ section.settings.register_button_text }}</button>
    </div>
  </div>
</div>

<script>
    document.getElementById('register-button').addEventListener('click', function() {
        const targetElement = document.querySelector('.scrolling-content__text.heading');
            if (targetElement) {
                targetElement.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
        });
        }
    });
</script>
{% schema %}
{
  "name": "B2B Shop Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Visit our B2B Shop"
    },
    {
      "type": "text",
      "id": "existing_customer_heading",
      "label": "Existing Customer Heading",
      "default": "Already a B2B customer?"
    },
    {
      "type": "text",
      "id": "existing_customer_subtext",
      "label": "Existing Customer Subtext",
      "default": "Log in with your email address."
    },
    {
      "type": "text",
      "id": "login_button_text",
      "label": "Login Button Text",
      "default": "LOG IN"
    },
    {
      "type": "text",
      "id": "new_customer_heading",
      "label": "New Customer Heading",
      "default": "Create your B2B customer account"
    },
    {
      "type": "text",
      "id": "new_customer_subtext",
      "label": "New Customer Subtext",
      "default": "Please fill out the registration form."
    },
    {
      "type": "text",
      "id": "register_button_text",
      "label": "Register Button Text",
      "default": "REGISTER NOW"
    }
  ],
  "presets": [
    {
      "name": "B2B Shop Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}